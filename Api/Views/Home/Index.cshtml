    <script src="/js/swal.js"></script>

    <script>
        function info() {
            var span = document.createElement("span");
            span.innerHTML = 'abc<br>efg'

            Swal.fire({
                icon: 'info',
                title: ' درباره ی ما ',
                html: 'دیزاینر : محمد مصطفی دستجردی  <br/> برنامه نویس : محمد امین کارویزی ',
                footer: '<a href="https://crusaders.ir" class="link">&copy; 2023 - Crusaders</a>'

            })
        }
        function ContactUs() {
            Swal.fire({
                icon: 'info',
                title: 'تماس با ما',
                html: 'محمد مصطفی دستجردی </br> آیدی تلگرام : mmd_program </br></br>محمد امین کارویزی </br> آیدی تلگرام : M_AminK </br> آیدی ایتا : Mamin84',
                footer: '<a href="https://crusaders.ir" class="link">&copy; 2023 - Crusaders</a>'

            })
        }
    </script>
}
@section styles{
    <link href="/css/swal.css" rel="stylesheet" />
    <link href="/css/index.css" rel="stylesheet" />
    <link href="/css/index.css" rel="stylesheet" />
}
@section robots {
    <meta name="robots" content="index, follow">
}